@model Pharmacy.Data.Models.Security.Login;
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<section style="height:81.2vh">
    <div class="row">
        <h3>Увійти</h3>
        <form asp-action="LoginCheckout" method="post" >
            <div class="form-group" style="width:100%">
                <label asp-for="Email"></label>
                <div class="">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="width:100%">
                <label asp-for="Password"></label>
                <div class="">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn-primary" style="display: block;width: 125px;margin: 20px auto;" asp-controller="Security" asp-action="LoginCheckout">
                Увійти
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                </svg>
            </button>
        </form>
        <a href="/register" class="text-center" style="font-size:18px">Реєстрація</a>
    </div>

</section>

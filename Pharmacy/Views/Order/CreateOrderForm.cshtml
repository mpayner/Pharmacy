@model Pharmacy.Data.Models.Order;
@{
    ViewData["Title"] = "CreateOrderForm";
    Layout = "_Layout";
}
<section>
<div class="row">
    <h3>Оформлення замовлення</h3>
        <form asp-action="Checkout" method="post" class="form-horizontal">
          
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="col-md-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
            <div class="col-md-5">
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Address"></label>
                <div class="col-md-5">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="col-md-5">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="col-md-5">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryCompanyId"></label>
                <div class="col-md-5">
                    <select asp-for="DeliveryCompanyId" class="form-control">
                        @foreach (var company in ViewBag.Companies)
                        {
                           <option value="@company.Id">@company.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DeliveryCompanyId" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-danger m-5" asp-controller="Order" asp-action="Checkout">Сплатити</button>
        </form>
</div>

</section>